doctype html
html(lang="en")
    head
        title freeCodeCamp Basejump: File Metadata Microservice
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
        link(rel="stylesheet" href="./styles.css")
        script(src="https://code.jquery.com/jquery-3.1.0.min.js")
        script(src="./validation.js")
    
    body
        .container
            h1.text-center freeCodeCamp API Basejump: File Metadata Microservice
            
            h2.text-center Upload a file to get its size in bytes (10Mb max)
            
            .text-center.form-container
                .message Choose a file to upload
                form(action="/", method="post", enctype="multipart/form-data").form-inline
                    .form-group
                        input(type="file" name="file" id="file").form-control
                    button(type="submit").btn.btn-primary Upload
                